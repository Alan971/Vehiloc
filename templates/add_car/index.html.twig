{% extends 'base.html.twig' %}

{% block title %}Hello AddCarController!{% endblock %}

{% block body %}

<section id="add">
    <a href="{{ path('app_main') }}">‚Üê Retour</a>
    <h1>Ajouter une voiture</h1>

        {{ form_start(form) }}
        <div class="input">
            {{ form_row(form.Name, {label: 'Nom de la voiture'}) }}
        </div>
        <div class="input">
            {{ form_row(form.Comment, {label: 'Description'}) }}
        </div>
        <div class="flex-input">
            <div class="input">        
                {{ form_row(form.PricePerMonth, {label: 'Prix mensuel en '}) }}
            </div>
            <div class="input">
                {{ form_row(form.PricePerDay, {label: 'Prix journalier en '}) }}
            </div>
        </div>
        <div class="flex-input">
            <div class="input">
                {{ form_row(form.SeatNumber, {label: 'Nombre de places'}) }}
            </div>
            <div class="input">
                {{ form_row(form.GearType, {label: 'Boite de vitesse'}) }}
            </div>
        </div>
        <button type="submit" class="btn-add">Ajouter</button>
        {{ form_end(form) }}

</section>
{% endblock %}
